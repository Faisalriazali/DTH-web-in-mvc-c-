@model R_DTH.Models.faq

@{
    ViewBag.Title = "Edit";
}

<style>
    textarea#faq_answers {
        height: 100px;
        width: 100%;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit Form
        <small>Admin View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>FAQ</a></li>
        <li><a href="#">List</a></li>
        <li class="active">Edit</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <br>
    <br>
    <div class="row">
        <!-- left column -->
        <div class="col-md-0">

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <!-- general form elements disabled -->
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit FAQ</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-8">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="box-body form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.faq_id)
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Question*</label>

                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.faq_question, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.faq_question, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Answer*</label>

                                    <!-- textarea -->
                                    <div class="col-sm-10">
                                        @*<textarea name="faq_answers" class="form-control" style="height:200px"></textarea>*@
                                        @Html.TextAreaFor(model => model.faq_answers, new { htmlAttributes = new { @class = "form-control", @id="txtArea" } })
                                        @Html.ValidationMessageFor(model => model.faq_answers, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer ">
                                @Html.ActionLink("Back to List", "Index")   <input type="submit" value="Update" class="btn btn-info pull-right" />
                            </div>
                            <!-- /.box-footer -->
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

