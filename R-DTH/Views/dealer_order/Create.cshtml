@model R_DTH.Models.dealer_order

@{
    ViewBag.Title = "Dealer Order";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="w3l-main-contact">
    <div class="container">
        <div class="agileinfo-contact-main-address">
            <h4 class="w3ls-inner-title">Place Orders For Setup Boxes</h4>
            <div class="agileits-main-right">
                <h5>Complete Order Details.</h5>
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="clearfix"></div>
                    <div class="w3ls-text sec-right">
                        <label class="contact-form-w3ls">Dealer Name</label>
                        <input type="hidden" class="form-control" name="dealOrder_dealer" value="@Html.DisplayName(Session["dealerId"].ToString())" />
                        <input type="text" class="form-control" name="" value="@Html.DisplayName(Session["dealerName"].ToString())" />
                        @Html.ValidationMessageFor(model => model.dealOrder_dealer, "", new { @class = "text-danger" })
                    </div>
                    <div class="w3ls-text sec-right">
                        <label class="contact-form-w3ls">Product</label>
                        @Html.HiddenFor(model => model.dealOrder_product, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.dealOrder_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dealOrder_product, "", new { @class = "text-danger" })
                    </div>
                    <div class="w3ls-text sec-right">
                        <label class="contact-form-w3ls">Quantity</label>
                        @Html.EditorFor(model => model.dealOrder_quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dealOrder_quantity, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <input type="submit" class="btn-info hover" style="margin-top:20px; padding:10px;" value="Order Now">
                }
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

