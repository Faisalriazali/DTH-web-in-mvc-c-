@model R_DTH.Models.scratch_card

@{
    ViewBag.Title = "Create";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Scratch Card
        <small>Admin View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Scratch Card</a></li>
        <li><a href="#">List</a></li>
        <li class="active">Generate</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <br>
    <br>
    <div class="row">
        <!-- left column -->
        <div class="col-md-0">

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <!-- general form elements disabled -->
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Generate Scratch Card</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-8">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="box-body form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Select Packages</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownList("card_package", null, htmlAttributes: new { @class = "form-control", @id = "cp" })
                                        @Html.ValidationMessageFor(model => model.card_package, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label"></label>

                                    <div class="col-sm-10">
                                        Charges of Scratch Card will Considered as selected Package charges.
                                        @Html.HiddenFor(model => model.card_charges, new { htmlAttributes = new { @class = "form-control", @id = "charge" } })
                                        @Html.ValidationMessageFor(model => model.card_charges, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label"></label>

                                    <!-- textarea -->
                                    <div class="col-sm-10">
                                        @Html.HiddenFor(model => model.card_status, new { htmlAttributes = new { @class = "form-control" }})
                                        @Html.ValidationMessageFor(model => model.card_status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer ">
                                @Html.ActionLink("Back to List", "Index")   <input type="submit" value="Generate Now" class="btn btn-info pull-right" />
                            </div>
                            <!-- /.box-footer -->
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

