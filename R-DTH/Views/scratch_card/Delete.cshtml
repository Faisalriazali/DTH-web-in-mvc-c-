@model R_DTH.Models.scratch_card

@{
    ViewBag.Title = "Delete";
}


<section class="content-header">
    <h1>
        <small>Admin View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Scratch Card</a></li>
        <li><a href="#">List</a></li>
        <li class="active">Delete</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <br>
    <br>
    <div class="row">
        <!-- left column -->
        <div class="col-md-0">

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <!-- general form elements disabled -->
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Delete Card Details</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-8">
                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <h4>scratch_card</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Card Number
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.card_number)
                                </dd>

                                <dt>
                                    Card Charges
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.card_charges)
                                </dd>

                                <dt>
                                    Card Status
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.card_status)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" /> |
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            }
                        </div>

                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>


