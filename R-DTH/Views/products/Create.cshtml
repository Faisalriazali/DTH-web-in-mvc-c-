@model R_DTH.Models.product

@{
    ViewBag.Title = "Product";
}

<section class="content-header">
    <h1>
        Product
        <small>Admin View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Product</a></li>
        <li><a href="#">List</a></li>
        <li class="active">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <br>
    <br>
    <div class="row">
        <!-- left column -->
        <div class="col-md-0">

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <!-- general form elements disabled -->
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Add New Product</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-8">

                        @using (Html.BeginForm("Create","products", FormMethod.Post,new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="box-body form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Image</label>

                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(model => model.product_img, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.product_img, "", new { @class = "text-danger" })*@
                                        <input type="file" name="ImageFile" class="form-control " />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Charges</label>

                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.product_charges, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.product_charges, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Details</label>

                                    <!-- textarea -->
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.product_details, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.product_details, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer ">
                                @Html.ActionLink("Back to List", "Index")   <input type="submit" value="Add Now" class="btn btn-info pull-right" />
                            </div>
                            <!-- /.box-footer -->
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

