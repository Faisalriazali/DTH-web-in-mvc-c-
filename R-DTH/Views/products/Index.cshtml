@model IEnumerable<R_DTH.Models.product>

@{
    ViewBag.Title = "Products";
}

<section class="content-header">
    <h1>
        Product List
        <small>Admin View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Product</a></li>
        <li><a href="#">List</a></li>
        <li class="active">View</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        @Html.ActionLink("Add New Product", "Create")

                    </h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Product Image</th>
                                <th>Product Charges</th>
                                <th>Product Details</th>
                                <th>Take Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.product_name)
                                    </td>
                                    <td align="center">
                                       <img style="width:70px; height:50px;" src="~/Content/AdminStuff/dist/img/@Html.DisplayFor(modelItem => item.product_img)" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.product_charges)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.product_details)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
                                        @*@Html.ActionLink("Details", "Details", new { id = item.product_id }) |*@
                                        @Html.ActionLink("Delete", "Delete", new { id = item.product_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Product Name</th>
                                <th>Product Image</th>
                                <th>Product Charges</th>
                                <th>Product Details</th>
                                <th>Take Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

