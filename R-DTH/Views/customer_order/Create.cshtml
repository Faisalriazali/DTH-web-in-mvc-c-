@model R_DTH.Models.customer_order

@{
    ViewBag.Title = "Customer Order";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="w3l-main-contact">
    <div class="container">
        <div class="agileinfo-contact-main-address">
            <h4 class="w3ls-inner-title">Place Orders For Setup Boxes</h4>
            <div class="agileits-main-right">
                <h5>Complete Order Details.</h5>
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="clearfix"></div>
                    <div class="w3ls-text sec-right">
                        <label class="contact-form-w3ls">Customer Name</label>
                        <input type="hidden" class="form-control" name="cusOrder_customer" value="@Html.DisplayName(Session["CustomerId"].ToString())" />
                        @Html.ValidationMessageFor(model => model.cusOrder_customer, "", new { @class = "text-danger" })
                        <input type="text" class="form-control" name="customerName" value="@Html.DisplayName(Session["CustomerName"].ToString())" />
                    </div>
                    <div class="w3ls-text sec-right">
                        <label class="contact-form-w3ls">Product</label>
                        @Html.HiddenFor(model => model.cusOrder_product, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(model => model.cusOrder_productName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cusOrder_product, "", new { @class = "text-danger" })
                    </div>
                    <div class="w3ls-text sec-right">
                        <label class="contact-form-w3ls">Quantity</label>
                        @Html.EditorFor(model => model.cusOrder_quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cusOrder_quantity, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <input type="submit" class="btn-info hover" style="margin-top:20px; padding:10px;" value="Order Now">
                }
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

