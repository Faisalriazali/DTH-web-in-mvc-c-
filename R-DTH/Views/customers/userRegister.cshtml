@model R_DTH.Models.customer

@{
    ViewBag.Title = "userRegister";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Customer - Login</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">

    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900'>
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link href="~/Content/Login/css/style.css" rel="stylesheet" />
    <style>
        .form-module select {
            outline: none;
            display: block;
            width: 100%;
            border: 1px solid #d9d9d9;
            margin: 0 0 20px;
            padding: 10px 15px;
            box-sizing: border-box;
            -webkit-transition: 0.3s ease;
            transition: 0.3s ease;
        }
    </style>

</head>

<body>

    <!-- Form Mixin-->
    <!-- Input Mixin-->
    <!-- Button Mixin-->
    <!-- Pen Title-->
    <div class="pen-title" style="margin-top:-30px;">
        <h1>Customer Registration</h1>
        <span>R-DTH Service</span>
    </div>
    <!-- Form Module-->
    <div class="module form-module" style="margin-top:-35px;">
        <div class="toggle" style="visibility:hidden;">
            <i class="fa fa-times fa-pencil"></i>
            <div class="tooltip" style="margin-right:-90px;">Click To Login</div>
        </div>
        <div class="form">
            <h2>Register Yourself</h2>
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="text" name="cus_name" placeholder="Username" required />
                @Html.ValidationMessageFor(model => model.cus_name, "", new { @class = "text-danger" })

                <input type="number" name="cus_card_no" placeholder="Card No" required />
                @Html.ValidationMessageFor(model => model.cus_card_no, "", new { @class = "text-danger" })

                @Html.DropDownList("cus_package", null, htmlAttributes: new { })
                @Html.ValidationMessageFor(model => model.cus_package, "", new { @class = "text-danger" })

                <input type="number" name="cus_contact_no" placeholder="Contact No" required />
                @Html.ValidationMessageFor(model => model.cus_contact_no, "", new { @class = "text-danger" })

                <input type="email" name="cus_email" placeholder="Email Address" required />
                @Html.ValidationMessageFor(model => model.cus_email, "", new { @class = "text-danger" })

                <input type="password" name="cus_password" placeholder="Password" required />
                @Html.ValidationMessageFor(model => model.cus_password, "", new { @class = "text-danger" })

                <input type="text" name="cus_address" placeholder="Address"  required />
                @Html.ValidationMessageFor(model => model.cus_address, "", new { @class = "text-danger" })

                <button type="submit">Register</button>
}
        </div>
        <div class="cta"><a href="http://andytran.me">@Html.DisplayFor(model => model.LoginErrorMessage)</a></div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='https://codepen.io/andytran/pen/vLmRVp.js'></script>

    <script src="~/Content/Login/js/index.js"></script>
</body>
</html>

