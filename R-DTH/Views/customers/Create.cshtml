                                        @Html.ValidationMessageFor(model => model.cus_package, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Contact #</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.cus_contact_no, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.cus_contact_no, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Email</label>
                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(model => model.cus_email, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="email" name="cus_email" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.cus_email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(model => model.cus_password, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="password" name="cus_password" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.cus_password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Address</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.cus_address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.cus_address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label"></label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.LoginErrorMessage)
                                        @*@Html.EditorFor(model => model.cus_ssd, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="hidden" name="cus_ssd" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.cus_ssd, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(model => model.cus_sed, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="hidden" name="cus_sed" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.cus_sed, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        @Html.HiddenFor(model => model.cus_payment_left, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.cus_payment_left, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer ">
                                @Html.ActionLink("Back to List", "Index")   <input type="submit" value="Add Now" class="btn btn-info pull-right" />
                            </div>
                            <!-- /.box-footer -->
                        }
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

