@model IEnumerable<R_DTH.Models.package_change_request>

@{
    ViewBag.Title = "Index";
}


<section class="content-header">
    <h1>
        Service Change Request List
        <small>Admin View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Requests</a></li>
        <li><a href="#">List</a></li>
        <li class="active">View</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Customer Card#</th>
                                <th>Applied Package</th>
                                <th>Package Charges</th>
                                <th>Take Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcr_cusName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcr_cusCardNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcr_packName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcr_packCharges)
                                    </td>
                                    <td>
                                       @*<a href="@Url.Action("changeCustomer", "package_change_request", new { id = item.pcr_id })">Accept</a>  |*@
                                        @Html.ActionLink("Checkout", "Edit", new { id = item.pcr_id })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.pcr_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Customer Name</th>
                                <th>Customer Card#</th>
                                <th>Applied Package</th>
                                <th>Package Charges</th>
                                <th>Take Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

